                                        <li class="badge bg-light rounded-pill font-xs m-0 text-muted text-dark"><%=posts[i].labels[j]%></li>
                                    <% } %>
                                </ul>
                                <div class="d-flex align-items-center justify-content-between mt-3 mx-2"> 
                                    <p class="my-auto text-muted font-xs"><i class="fa-solid fa-calendar-days text-muted me-2"></i><%-formattedDate(oldDate = new Date(posts[i].published))%></p>
                                    <a class="font-xs link" href="<%=site_url%><%=slug%>/<%=posts[i].url%>">Got To Blog <i class="fa-solid fa-angles-right link mx-1"> </i></a>
                                </div>
                            </div>
                        </div>
                        </a>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </section>

