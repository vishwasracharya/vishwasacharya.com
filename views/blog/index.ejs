    <section>
        <div class="container">
            <div class="row">
                <% for (let i=0; i<posts.length; i++) {%> 
                <div class="col-md-6 col-xl-4 mb-3 overflow hidden bounceIn">
                    <div class="border rounded overflow hidden">
                        <a href="<%=site_url%><%=slug%>/<%=posts[i].url%>">
                        <div class="p-2">
                            <img loading="lazy" class="img-fluid text-muted-hover rounded fadeIn" src="img/blogs/<%=posts[i].url%>.png" alt="<%=posts[i].title%>">
